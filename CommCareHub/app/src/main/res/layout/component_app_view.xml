<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
            android:columnCount="12"
            android:rowCount="5">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ValueLabs Test App"
        android:id="@+id/av_title"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Latest Build: 354"
        android:id="@+id/av_build_number"
        android:layout_row="2"
        android:layout_column="0"/>

    <ImageButton
        android:layout_width="52dp"
        android:layout_height="48dp"
        android:layout_margin="4dp"
        android:id="@+id/av_button"
        android:layout_row="0"
        android:layout_column="8"
        android:layout_columnSpan="4"
        android:layout_rowSpan="4"
        android:src="@drawable/btn_icon_download"
        android:scaleType="fitXY"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="423kb / 69436kb"
        android:id="@+id/av_status"
        android:layout_marginRight="4dp"
        android:layout_row="4"
        android:layout_column="7"
        android:layout_columnSpan="5"
        android:visibility="gone"/>
</GridLayout>